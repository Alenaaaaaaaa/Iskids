<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.timer.TimerFragment"
    android:background="@color/light">

    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/Start"
        android:fontFamily="@font/font1"
        android:textSize="20sp"
        android:textColor="@color/green_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.914"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSecondBreak" />


    <EditText
        android:id="@+id/txtSecondBreak"
        android:layout_width="70dp"
        android:textColor="@color/green_black"
        android:layout_height="45dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:textSize="18sp"
        android:fontFamily="@font/font1"
        android:inputType="number"
        android:text="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.809"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSecondWork" />

    <EditText
        android:id="@+id/txtSecondWork"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_marginTop="85dp"
        android:ems="10"
        android:textSize="18sp"
        android:fontFamily="@font/sfnsdisplaythin"
        android:inputType="number"
        android:textColor="@color/green_black"
        android:text="25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.809"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTime" />

    <TextView
        android:id="@+id/textTime"
        android:layout_width="215dp"
        android:layout_height="65dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/green_black"
        android:fontFamily="@font/bureauap"
        android:text="@string/_00_00"
        android:textSize="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textFlag" />

    <TextView
        android:id="@+id/textFlag"
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/green_black"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/bureauap"
        android:text=""
        android:lineHeight="40dp"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:textColor="@color/green_black"
        android:layout_marginStart="68dp"
        android:layout_marginTop="85dp"
        android:text="Время работы"
        android:fontFamily="@font/sfnsdisplaythin"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTime" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="120dp"
        android:textColor="@color/green_black"
        android:layout_height="45dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="40dp"
        android:textSize="24dp"
        android:fontFamily="@font/sfnsdisplaythin"
        android:text="Перерыв"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/green_light"/>

</androidx.constraintlayout.widget.ConstraintLayout>
