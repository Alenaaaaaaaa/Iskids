<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.add_homework.AddHomeWorkFragment"
    android:background="@color/light">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:id="@+id/spinnerDay"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spinnerSub"
            android:layout_width="408dp"
            android:layout_height="64dp"
            android:layout_marginTop="45dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerDay" />

        <EditText
            android:id="@+id/EtHW"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="44dp"
            android:ems="10"
            android:fontFamily="@font/font1"
            android:hint="@string/Add_HW"
            android:inputType="textMultiLine"
            android:textColor="@color/green_black"
            android:textColorHint="@color/green_black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerSub" />

        <Button
            android:id="@+id/BtnAddHomeWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:background="@drawable/buttonshape2"
            android:fontFamily="@font/font1"
            android:text="@string/Add"
            android:textColor="@color/green_black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.942"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/EtHW" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>